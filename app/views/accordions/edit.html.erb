<h1>Editing accordion</h1>

<% form_for(@accordion) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :heading %><br />
    <%= f.text_field :heading %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </p>
  <p>
    <%= f.label :paragraph %><br />
    <%= f.text_area :paragraph %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @accordion %> |
<%= link_to 'Back', accordions_path %>