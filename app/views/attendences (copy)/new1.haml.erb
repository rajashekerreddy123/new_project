%h1 New attendence
- form_for(@attendence) do |f|
  = f.error_messages
  %p
    = f.label :group
    %br/
    = f.text_field :group
  %p
    = f.label :year
    %br/
    = f.text_field :year
  #attendence_year1
  %p
    = f.submit 'Create'
= link_to 'Back', attendences_path
